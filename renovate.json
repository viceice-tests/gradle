{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":dependencyDashboard"],
  "automergeType": "branch",
  "semanticCommits": "enabled",
  "major": {
    "dependencyDashboardApproval": true
  },
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "managers": ["gradle-lite"],
      "enabled": true
    },
    {
      "packagePatterns": ["*"],
      "managers": ["gradle"],
      "enabled": false
    }
  ]
}
